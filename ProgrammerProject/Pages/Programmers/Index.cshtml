@page "{handler?}"
@model ProgrammerProject.Pages.Programmers.IndexModel
@{
    ViewData["Title"] = "Programmer Management";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-6">Programmer Management</h1>
        </div>
    </div>

    <!-- Action Bar -->
    <div class="row mb-3">
        <div class="col">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProgrammerModal">
                <i class="bi bi-plus-circle me-2"></i>Add New Programmer
            </button>
        </div>
    </div>

    <!-- Alert Container -->
    <div id="alertContainer"></div>

    <!-- Loading State -->
    <div id="loadingState" class="text-center py-4" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Loading programmer data...</p>
    </div>

    <!-- Programmers Table -->
    <div class="row">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">All Programmers</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="programmersTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Date of Birth</th>
                                    <th>Date of Joining</th>
                                    <th>Gender</th>
                                    <th>PROF1</th>
                                    <th>PROF2</th>
                                    <th>Salary</th>
                                    <th width="150">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="programmersTableBody">
                                <!-- Data will be loaded via AJAX -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Programmer Modal -->
<div class="modal fade" id="addProgrammerModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Programmer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="addProgrammerForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="name" class="form-label">Name *</label>
                            <input type="text" class="form-control" id="name" name="NewProgrammer.NAME" required>
                            <div class="invalid-feedback"></div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="sex" class="form-label">Gender *</label>
                            <select class="form-select" id="sex" name="NewProgrammer.SEX" required>
                                <option value="">Select Gender</option>
                                <option value="M">Male</option>
                                <option value="F">Female</option>
                               
                            </select>
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="dob" class="form-label">Date of Birth *</label>
                            <div class="input-group ">
                                <span class="input-group-text">
                                    <i class="bi bi-calendar-date"></i>
                                </span>
                                <input type="text"
                                       class="form-control datepicker"
                                       id="dob"
                                       name="NewProgrammer.DOB"
                                       autocomplete="off"
                                       required />
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="doj" class="form-label">Date of Joining *</label>
                            <div class="input-group ">
                                <span class="input-group-text">
                                    <i class="bi bi-calendar-date"></i>
                                </span>
                                <input type="text"
                                       class="form-control datepicker"
                                       id="doj"
                                       name="NewProgrammer.DOJ"
                                       autocomplete="off"
                                       required />
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="prof1" class="form-label">PROF1</label>
                            <input type="text" class="form-control" id="prof1" name="NewProgrammer.PROF1">
                            <div class="invalid-feedback"></div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="prof2" class="form-label">PROF2</label>
                            <input type="text" class="form-control" id="prof2" name="NewProgrammer.PROF2">
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="salary" class="form-label">Salary *</label>
                            <input type="number" min="0" class="form-control" id="salary" name="NewProgrammer.SALARY" required>
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="submitBtn">
                        <span class="spinner-border spinner-border-sm me-2" style="display: none;"></span>
                        Add Programmer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Programmer Modal -->
<div class="modal fade" id="editProgrammerModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Programmer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editProgrammerForm">
                @Html.AntiForgeryToken()
                <input type="hidden" id="editId" name="EditProgrammer.ID">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editName" class="form-label">Name *</label>
                            <input type="text" class="form-control" id="editName" name="EditProgrammer.NAME" required>
                            <div class="invalid-feedback"></div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editSex" class="form-label">Gender *</label>
                            <select class="form-select" id="editSex" name="EditProgrammer.SEX" required>
                                <option value="">Select Gender</option>
                                <option value="M">Male</option>
                                <option value="F">Female</option>
                                
                            </select>
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editDob" class="form-label">Date of Birth *</label>
                            <div class="input-group ">
                                <span class="input-group-text">
                                    <i class="bi bi-calendar-date"></i>
                                </span>
                                <input type="text"
                                       class="form-control datepicker"
                                       id="dob"
                                       name="NewProgrammer.DOB"
                                       autocomplete="off"
                                       required />
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editDoj" class="form-label">Date of Joining *</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-calendar-date"></i>
                                </span>
                                <input type="text"
                                       class="form-control datepicker"
                                       id="doj"
                                       name="NewProgrammer.DOJ"
                                       autocomplete="off"
                                       required />
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editProf1" class="form-label">PROF1</label>
                            <input type="text" class="form-control" id="editProf1" name="EditProgrammer.PROF1">
                            <div class="invalid-feedback"></div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editProf2" class="form-label">PROF2</label>
                            <input type="text" class="form-control" id="editProf2" name="EditProgrammer.PROF2">
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editSalary" class="form-label">Salary *</label>
                            <input type="number" min="0" class="form-control" id="editSalary" name="EditProgrammer.SALARY" required>
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success" id="updateBtn">
                        <span class="spinner-border spinner-border-sm me-2" style="display: none;"></span>
                        Update Programmer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteProgrammerModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this programmer?</p>
                <div class="alert alert-warning">
                    <strong>Name:</strong> <span id="deleteProgrammerName"></span><br>
                    <strong>ID:</strong> <span id="deleteProgrammerId"></span>
                </div>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <span class="spinner-border spinner-border-sm me-2" style="display: none;"></span>
                    Delete Programmer
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/programmer.js"></script>
}
