@page "{handler?}"
@model ProgrammerProject.Pages.Studies.IndexModel
@{
    ViewData["Title"] = "Study Management";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div id="alertContainer"></div>

            <!-- Header with Add Button -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-6 mb-0">Study Management</h1>
                <button type="button" class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#addStudyModal">
                    <i class="fas fa-plus"></i> Add New Study
                </button>
            </div>

            <!-- Loading State -->
            <div id="loadingState" class="text-center p-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading study data...</span>
                </div>
                <p class="mt-2">Loading study data...</p>
            </div>

            <!-- Studies Table -->
            <div class="row">
                <div class="col">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                    <h5 class="card-title mb-0">All Studies</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="studiesTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Sr.No.</th>
                                    <th>Name</th>
                                    <th>Study Place</th>
                                    <th>Course</th>
                                    <th>Course Cost</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="studiesTableBody">
                                <!-- Data will be loaded via AJAX -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Study Modal -->
<div class="modal fade" id="addStudyModal" tabindex="-1" aria-labelledby="addStudyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="addStudyModalLabel">Add New Study</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addStudyForm" novalidate>
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-6 mb-3">
                                    <label for="name" class="form-label">Name<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="name" name="name" >
                            <div class="invalid-feedback"></div>
                        </div>
                        <div class="col-md-6 mb-3">
                                    <label for="splace" class="form-label">Study Place<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="splace" name="splace" >
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                                    <label for="course" class="form-label">Course<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="course" name="course">
                            <div class="invalid-feedback"></div>
                        </div>
                        <div class="col-md-6 mb-3">
                                    <label for="ccost" class="form-label">Course Cost<span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="ccost" name="ccost" min="0">
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="addStudyForm" class="btn btn-success" id="submitBtn">
                    <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                    Add Study
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Study Modal -->
<div class="modal fade" id="editStudyModal" tabindex="-1" aria-labelledby="editStudyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editStudyModalLabel">Edit Study</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editStudyForm" novalidate>
                    @Html.AntiForgeryToken()

                    <input type="hidden" id="editName" name="name">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                                    <label for="editNameDisplay" class="form-label">Name<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="editNameDisplay" readonly>
                            <small class="text-muted">Name cannot be changed</small>
                        </div>
                        <div class="col-md-6 mb-3">
                                    <label for="editSplace" class="form-label">Study Place<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="editSplace" name="splace" maxlength="100">
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                                    <label for="editCourse" class="form-label">Course<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="editCourse" name="course" maxlength="100">
                            <div class="invalid-feedback"></div>
                        </div>
                        <div class="col-md-6 mb-3">
                                    <label for="editCcost" class="form-label">Course Cost<span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="editCcost" name="ccost" step="0.01" min="0">
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="editStudyForm" class="btn btn-warning" id="updateBtn">
                    <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                    Update Study
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Study Modal -->
<div class="modal fade" id="deleteStudyModal" tabindex="-1" aria-labelledby="deleteStudyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteStudyModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this study?</p>

                <div class="alert alert-warning">
                    <strong>Name:</strong> <span id="deleteStudyName"></span>
                </div>

                <p class="text-muted">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                    Delete Study
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Study.js"></script>
}
