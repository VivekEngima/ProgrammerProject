@page "{handler?}"
@model ProgrammerProject.Pages.Studies.IndexModel
@{
    ViewData["Title"] = "Study Management";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet" />

<div class="container-fluid mt-4">
            <div class="row mb-4 align-items-center">
                <div class="col">
                    <h1 class="display-6 mb-0">Study Management</h1>
                </div>
                <div class="col-auto">
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addStudyModal">
                        <i class="bi bi-plus-lg me-2"></i>
                        Add New Study
                    </button>
                </div>
            </div>
            <!-- Loading State -->
            <div id="loadingState" class="text-center" style="display: none;">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading study data...</span>
                </div>
            </div>
            <!-- Studies Table -->
    </div>

<div class="row">
    <div class="col">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">All Studies</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="programmersTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Sr.No.</th>
                                <th>Name</th>
                                <th>Study Place</th>
                                <th>Course</th>
                                <th>Course Cost</th>
                                <th width="150">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="studiesTableBody">
                            <!-- Data will be loaded via AJAX -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<!-- Add Study Modal -->
<div class="modal fade" id="addStudyModal" tabindex="-1" aria-labelledby="addStudyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addStudyModalLabel">Add New Study</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addStudyForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name*</label>
                                <input type="text" class="form-control" id="name" required>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="splace" class="form-label">Study Place*</label>
                                <input type="text" class="form-control" id="splace" required>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="course" class="form-label">Course*</label>
                                <input type="text" class="form-control" id="course" required>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="ccost" class="form-label">Course Cost*</label>
                                <input type="number" class="form-control" id="ccost" min="0" required>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success" id="submitBtn">
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" style="display: none;"></span>
                        Add Study
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Study Modal -->
<div class="modal fade" id="editStudyModal" tabindex="-1" aria-labelledby="editStudyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editStudyModalLabel">Edit Study</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editStudyForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" id="editName">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="editNameDisplay" class="form-label">Name*</label>
                                <input type="text" class="form-control" id="editNameDisplay" readonly>
                                <small class="text-muted">Name cannot be changed</small>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="editSplace" class="form-label">Study Place*</label>
                                <input type="text" class="form-control" id="editSplace" required>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="editCourse" class="form-label">Course*</label>
                                <input type="text" class="form-control" id="editCourse" required>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="editCcost" class="form-label">Course Cost*</label>
                                <input type="number" class="form-control" id="editCcost" min="0" required>
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success" id="updateBtn">
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" style="display: none;"></span>
                        Update Study
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteStudyModal" tabindex="-1" aria-labelledby="deleteStudyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteStudyModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this study?</p>

                <div>
                    <strong>Name:</strong> <span id="deleteStudyName"></span>
                </div>

                <p>This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" style="display: none;"></span>
                    Delete Study
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Study.js"></script>
}